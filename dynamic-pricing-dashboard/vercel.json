{
  "buildCommand": "chmod +x build.sh && ./build.sh",
  "outputDirectory": ".next",
  "installCommand": "npm ci --only=production --no-audit --no-fund",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NEXT_PUBLIC_API_URL": "@next_public_api_url"
  },
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096"
    }
  }
}
